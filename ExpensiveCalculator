//Expensive Calculator
/*
Turns the highest end gaming machine into a dopey calculator.
This program is a simple example of the arithmetic functions in C++.
*/

#include <iospace>
using namespace std;

int main()
{
    cout << "7+3 = " << 7+3 << endl;
    cout << "7-3 = " << 7-3 << endl;
    cout << "7/3 = " << 7/3 << endl;
    cout << "7*3 = " << 7*3 << endl;
    cout << "7.0/3.0 = " << 7.0/3.0 << endl;
    cout << "7%3 = " << 7%3 << endl;
    cout << "7+3*5 = " << 7+3*5 << endl;
    cout << "(7+3)*5 = " << (7+3)*5 << endl;
    
    return 0;
}
